@using MaxDev.Prode.Negocio.Configuracion
@model MaxDev.Prode.Web.Models.RegisterViewModel
@{
    LayoutConfig.Titulo = "Registrarse";
}

<div class="container">
    <div class="panel panel-primary">
        <div class="panel-heading bg-futbol">
            <h3 class="panel-title">
                <span class="fa fa-sign-in"></span>&nbsp;
                @LayoutConfig.Titulo
            </h3>
        </div>
        <div class="panel-body">
            <h4>Registrate y empez&aacute; a participar de los torneos</h4>
            <hr />
            @using (Html.BeginForm("Register", "Account", FormMethod.Post, new {role = "form"}))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary("", new {@class = "text-danger"})
                <div class="row">
                    <div class="form-group col-md-6">
                        @Html.LabelFor(m => m.Nombre, new {@class = "control-label"})
                        @Html.TextBoxFor(m => m.Nombre, new {@class = "form-control"})
                    </div>
                    <div class="form-group col-md-6">
                        @Html.LabelFor(m => m.Apellido, new {@class = "control-label"})
                        @Html.TextBoxFor(m => m.Apellido, new {@class = "form-control"})
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-md-6">
                        @Html.LabelFor(m => m.UserName, new {@class = "control-label"})
                        @Html.TextBoxFor(m => m.UserName, new {@class = "form-control"})
                    </div>
                    <div class="form-group col-md-6">
                        @Html.LabelFor(m => m.Email, new {@class = "control-label"})
                        @Html.TextBoxFor(m => m.Email, new {@class = "form-control"})
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-md-6">
                        @Html.LabelFor(m => m.Password, new {@class = "control-label"})
                        @Html.PasswordFor(m => m.Password, new {@class = "form-control"})
                    </div>
                    <div class="form-group col-md-6">
                        @Html.LabelFor(m => m.ConfirmPassword, new {@class = "control-label"})
                        @Html.PasswordFor(m => m.ConfirmPassword, new {@class = "form-control"})
                    </div>
                </div>
                <button type="submit" class="btn btn-primary">@LayoutConfig.Titulo</button>
            }
        </div>
    </div>
</div>

